{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": ["dom", "dom.iterable", "esnext"],
    "jsx": "react-jsx",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noEmit": true,
    "rootDir": "./app",
    "baseUrl": "./app",
    "paths": {
      "@app/*": ["*"]
    }
  },
  "include": ["app"],
  "files": ["app/index.d.ts"],
  "exclude": ["node_modules"]
}
